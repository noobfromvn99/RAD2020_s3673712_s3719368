<% provide(:title , "Home") %>

<div class="row">
  <div class="col-sm-12">
  <ul class="list-group list-group-horizontal-sm">
    <li class="list-group-item active" id="RecentPost"><%= link_to "Recent Post"   '#' %></li>
    <li class="list-group-item" id="SelectedPost"><%= link_to "Selected Post",   '#' %></li>
    <li class="list-group-item" id="MySetting"><%= link_to "My Setting", '#' %></li>
    
    <li class="list-group-button"><%= link_to "New Post",   'post#new' , class:"btn btn-success", style:"float:right"%></li>
    <li class="list-group-input"> <input class="form-control" type="text" placeholder="Search" aria-label="Search"> </li>
  </div>
</div>
<div class="row">
<p>
  <% @posts.each do |post| %>
      <div class="container-fluid post">
      <%= link_to post.title, post %><br>
      <%= @user.name %>
      <%= post.created_at %>
      <%= getTopic(post.topic_id) %>
      <%= post.viewed %>
      </div>
  <% end %> 
 </p> 
</div>