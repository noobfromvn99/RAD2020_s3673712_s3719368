<div class="col-sm-12">


  <%if @my_posts.exists?%>
  <% @my_posts.each do |post| %>
      <div class="well" style="margin-bottom:5px;" >
        <div class="media">
          <div class="media-body">
            <h4 class="media-heading long-title"><%= link_to post.title, post, class:"custom-highlight" %></h3>
            
            <ul class="list-inline list-unstyled">
              <li>
                <i class="glyphicon glyphicon-calendar"></i>
                <%= post.created_at %>
              </li>
               |
              <li>
                <i class="glyphicon glyphicon-fire"></i>
                <%= getTopic(post.topic_id) %>
              </li>
               |
              <li>
                <i class="glyphicon glyphicon-eye-open"></i>
                <%= post.viewed %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    <% end %> 
    <% else %>
    <h1>You do not have any posts yet</h1>
    <% end %>
 <%= will_paginate @my_posts%>

</div>