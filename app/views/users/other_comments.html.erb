<div class="col-sm-12">
<p>Others comments to my posts</p>
<p>

  <% @comments.each do |comment| %>
      <div class="well" style="margin-bottom:5px;" >
        <div class="media">
       
        <% if get_post(comment.post_id).user_id = current_user.id  %>
          <div class="media-body">
            <h4 class="media-heading long-title"><%= link_to comment.content,  class:"custom-highlight" %></h4>
            <h4>to</h4>
            <h4 class="media-heading long-title"><%= link_to get_post(comment.post_id).content,  class:"custom-highlight" %></h4>
          </div>
        <% end %>
        </div>
      </div>
  <% end %> 
 </p> 
 <p>
</div>

