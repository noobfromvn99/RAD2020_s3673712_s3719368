<% provide(:title ,"New post") %>
<div class="post-container">

<h5 class="post-title">Post</h5>


    <%= render'shared/post_error' %>

    <%= form_for(@post) do |f| %>
    <div class="input-group mb-3" style="margin-bottom: 25px;">
        <div class="input-group-addon">
          <span class="input-group-text">Topic</span>
        </div>
        <%= f.collection_select :topic_id, Topic.all,:id,:name,{}, {class: "form-control"} %>  
    </div>

    <%= f.hidden_field :user_id, :value => @user.id %>
    <div class="input-group mb-3" style="margin-bottom: 25px;">
        <div class="input-group-addon">
          <span class="input-group-text">Title</span>
        </div>
        <%= f.text_field :title,  class: 'form-control', placeholder: 'Enter post title here' %>  
    </div>

    <div class="form-group">  
    <div class="image-upload">
        <label for="file-input">
         <span class="glyphicon glyphicon-picture"></span>
        </label>
        <%= f.file_field :picture, id:"file-input" ,accept:'image/jpeg,image/gif,image/png'%></i>
    <%# RICH TEXT BOX %>
    </div>
<div class="toolbar">
	<ul class="tool-list">
		<li class="tool">
			<button 
				type="button" 
				data-command='justifyLeft'
				class="tool--btn">
				<i class='glyphicon glyphicon-align-left'></i>
			</button>
		</li>
		<li class="tool">
			<button 
				type="button" 
				data-command='justifyCenter' 
				class="tool--btn">
				<i class='glyphicon glyphicon-align-center'></i>
			</button>
		</li>
		<li class="tool">
			<button 
				type="button" 
				data-command="bold" 
				class="tool--btn">
				<i class='glyphicon glyphicon-bold'></i>
			</button>
		</li>
		<li class="tool">
			<button 
				type="button" 
				data-command="italic"
				class="tool--btn">
				<i class='glyphicon glyphicon-italic'></i>
			</button>
		</li>
		<li class="tool">
			<button 
				type="button" 
				data-command="underline"
				class="tool--btn">
				<i class='glyphicon glyphicon-text-color'></i>
			</button>
		</li>
		<li class="tool">
			<button 
				type="button" 
				data-command="insertOrderedList"
				class="tool--btn">
				<i class='glyphicon glyphicon-sort-by-order'></i>
			</button>
		</li>
		<li class="tool">
			<button 
				type="button" 
				data-command="insertUnorderedList"
				class="tool--btn">
				<i class='glyphicon glyphicon-list'></i>
			</button>
		</li>
		<li class="tool">
			<button 
				type="button" 
				data-command="createlink" 
				class="tool--btn">
				<i class='glyphicon glyphicon-paperclip'></i>
			</button>
		</li>
	</ul>
</div>
        <%= f.text_area :content,  class: 'form-control', id: 'content-output', :rows => 12, placeholder: 'Enter post content here' %>  
    </div>

    <div class="row">
      <div class="form-group">
      <div class="col-sm-2">
      <%= f.submit "Post" ,class: 'btn btn-success'%>
      </div>
      <div class="col-sm-2">
      <a href = "/index", class="btn btn-light">Cancel</a>
      </div>
      </div>
    </div>

    
    <% end %>
</div>
</div>

<script type="text/javascript">
  $('#file-input').bind('change',function() {varsize_in_megabytes=this.files[0].size/1024/1024;
  if(size_in_megabytes>5) {
    alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });

let output = document.getElementById('content-output');
let buttons = document.getElementsByClassName('tool--btn');
for (let btn of buttons) {
	btn.addEventListener('click', () => {
		let cmd = btn.dataset['command'];
		if(cmd === 'createlink') {
			let url = prompt("Enter the link here: ", "http:\/\/");
			document.execCommand(cmd, false, url);
		} else {
			document.execCommand(cmd, false, null);
		}
	})
}

</script>